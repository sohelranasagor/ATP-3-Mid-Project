<!DOCTYPE html>
<html>
	<head>
		<title>Registration</title>
		<link href="/CSS/style.css" rel="stylesheet" type="text/css" >
	</head>
	<body>
		<form method="post" enctype="multipart/form-data">
			<table border="0" width="100%">
				<tr height="15%" bgcolor="#23274C">
					<td width="20%"></td>
					<td valign="top"> <h2> <b> <font color="#CACBD5">Hospital </font><font color="white">Management System</font> </b> </h2>
						<td width="30%" valign="top" align="right">
							 <br/><br/><br/>
							<a href="/login"><font color="white">Login</font></a>&nbsp;&nbsp;<font color="white">|</font>&nbsp;&nbsp;
							<a href="/registration"><font color="white">Registration</font></a><br/>
						</td>
					</td>
					<td width="20%"></td>
				</tr>
			</table>
			<table border="0" width="100%">
				<tr height="7" bgcolor="#616174">
					<td width="20%"></td>
					<td width="40" height="40">
						<ul id="ul">
							<li id="q"><a class="active" href="">Home</a></li>
						</ul>
					</td>
					<td width="20%"></td>
				</tr>
			</table>
			<table border="0" width="100%">
				<td width="20%"></td>
				<td>
					<table border="0" width="100%">
							<tr>
								<td align="right"></td>
								<td>
									<%if(typeof errors != "undefined"){%>
										<% errors.forEach(function(err){ %>
											<font color="red">*<%=err.msg%></font> <br/>
										<% }); %>
									<% } %> 
									<br/>
								</td>
							</tr>
						<tr>
                            <td align="right">First name:</td>
                            <td><input type="text" name="firstName" class="a" placeholder="Please enter your First name" /> </td>
                        </tr>
                        <tr>
                            <td align="right">Last name:</td>
                            <td><input type="text" name="lastName" class="a" placeholder="Please enter your last name" /> </td>
                        </tr>
                        <tr>
                            <td align="right">DOB:</td>
                            <td><input type="date" name="date" class="a" /></td>
                        </tr>
                        <tr>
                            <td align="right">Gender:</td>
                            <td><input type="radio" name="gender" value="Male" />Male
                                <input type="radio" name="gender" value="Female" />Female 
                            </td>
                        </tr>
                        <tr>
                            <td align="right">Phone no:</td>
                            <td><input type="text" class="b" name="phnNo" value="+880" size="1" readonly />
                                <input type="text" class="c" name="phnNo1" id="phnNo1" size="13" > 
                            </td>
                        </tr>
                        <tr>
                            <td align="right">Email:</td>
                            <td><input type="text" class="a" name="email" id="email" placeholder="Please enter your email" /></td>
							 
                        </tr>
                        <tr>
                            <td align="right">City:</td>
                            <td><input type="text" class="a" name="city" placeholder="Please enter your city" /> </td>
                        </tr>
                        <tr>
                            <td align="right">Location:</td>
                            <td><input type="text" class="a" name="location" placeholder="Please enter your location" /> </td>
                        </tr>
                        <tr>
                            <td align="right">Profile Picture:</td>
                            <td><input type="file" class="a" name="upfile" ></td>
                        </tr>
                        <tr>
                            <td align="right">Password:</td>
                            <td><input type="password" class="a" name="password" /></td>
                        </tr>
                        <tr>
                            <td align="right">Confirm Password:</td>
                            <td><input type="password" class="a" name="confirmPassword" /> </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td><input type="submit" name="submit" value="Register" class="btn" />  </td>
                        </tr>
					</table>
				</td>
				<td width="20%"></td>
			</table>
			<br><br><br><br><br><br>
			<footer>
                <table border="0" width="100%">
                    <tr>
                        <td width="20%"></td>
                        <td>
                            
                            &copy; Copyright 2019 Hospital Management System
    
                        </td>
                        <td width="20%"></td>
                    </tr>
                </table>
            </footer>
		</form>
	</body>
</html>